<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="5dp">
<!--    android:background="@drawable/cardview_background"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="7dp">
        <TextView
            android:fontFamily="@font/helvetica_cyrillic_upright"

            style="@style/CardViewNameText"
            android:id="@+id/cardViewTextViewTextName"
            tools:text="@string/event_calendar"/>
        <TextView

            android:fontFamily="@font/helvetica_cyrillic_upright"

            android:textColor="#9d9d9d"
            style="@style/CardViewSubscriptText"
            android:id="@+id/cardViewTextSubscript"
            tools:text="@string/event_calendar"/>
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cardViewDrawable"/>

</androidx.constraintlayout.widget.ConstraintLayout>
