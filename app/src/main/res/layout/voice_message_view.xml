<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.comools"

    android:id="@+id/rightChatLayout"
    android:layout_width="@dimen/voice_message_width"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/voice_message_from_name_text"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textAlignment="textStart"
        android:textColor="#0000FF"
        android:textSize="10sp"
        tools:text="никто"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/voice_message_btn_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_play" />

            <ImageView
                android:id="@+id/voice_message_btn_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pause"
                android:visibility="invisible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/voice_message_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/voice_message_progress_text"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/voice_message_message_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        tools:layout_width="40dp"
        tools:text="20:00" />

</LinearLayout>
