<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="Theme.MyFamily" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--tool bar-->
<!--        <item name="colorPrimary">@color/appColor</item>-->
        <item name="colorPrimary">#6aba9f</item>
        <!-- window under tool bar-->
<!--        <item name="colorPrimaryVariant">@color/appColorDark</item>-->
        <item name="colorPrimaryVariant">#f6fafb</item>


        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="AppToolBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!--tool bar-->
<!--        <item name="colorPrimary">@color/appColor</item>-->
        <item name="colorPrimary">#ccf4e8</item>
        <!-- window under tool bar-->
        <item name="colorPrimaryVariant">@color/appColorDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashActivityDrawable</item>
    </style>

    <style name="noActionBar" parent="@style/Theme.AppCompat.Light">
<!--        <item name="android:windowActionBar">false</item>-->
<!--        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
