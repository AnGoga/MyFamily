<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewSubscriptText" parent="paleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12.5sp</item>
    </style>
    <style name="CardViewNameText" parent="CardViewSubscriptText">
        <item name="android:textColor">@color/bold_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BaseCardView">
        <item name="android:layout_height">@dimen/mainActivityCardViewHeight</item>
        <item name="layout_marginPercent">3%</item>
        <item name="layout_widthPercent">44%</item>

        <item name="cardElevation">20dp</item>
        <item name="cornerRadius">10dp</item>
<!--        app:cardElevation="20dp"-->
<!--        android:background="@null"-->

    </style>
    <style name="LeftCardView" parent="BaseCardView">
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="RightCardView" parent="BaseCardView">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="boldTextView">
        <item name="android:textColor">@color/bold_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="paleTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pale_text_color</item>
    </style>

    <style name="buy_list_holder_text_name_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="text_view_in_text_news">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>